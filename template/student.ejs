<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <%-include('css.ejs') %>
</head>
<body>
    <table>
        <tr>
            <th>학번</th>
            <th>이름</th>
            <th>학과</th>
            <th>학년</th>
            <th>삭제</th>
        </tr>
        <% list.forEach( item =>{ %>
            <tr>
                <td><%= item.stuNo %></td>
                <td><a href="/student/<%= item.stuNo %>"><%= item.stuName %></a></td>
                <td><%= item.stuDept %></td>
                <td><%= item.stuGrade %></td>
                <td>
                    <form action="/student/<%= item.stuNo %>?_method=DELETE" method="POST">
                        <button type="submit">삭제</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </table>
    <button type="button" onclick="location.href='/student/add'">학생등록</button>
</body>
</html>

